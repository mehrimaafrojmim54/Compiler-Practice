#include <stdio.h>
#include <ctype.h>
#include <math.h>

float stack[100];
int top = -1;

void push(float x) { stack[++top] = x; }
float pop() { return stack[top--]; }

float evaluatePostfix(char* expr) {
    int i = 0;

    while (expr[i] != '\0') {
        if (expr[i] == ' ') { i++; continue; }

        // Negative number
        if (expr[i] == '-' && isdigit(expr[i+1])) {
            i++;
            int num = 0;
            while (isdigit(expr[i])) { num = num*10 + (expr[i]-'0'); i++; }
            push(-num);
        }
        // Positive multi-digit
        else if (isdigit(expr[i])) {
            int num = 0;
            while (isdigit(expr[i])) { num = num*10 + (expr[i]-'0'); i++; }
            push(num);
        }
        // Operator
        else {
            float val2 = pop();
            float val1 = pop();

            switch(expr[i]) {
                case '+': push(val1+val2); break;
                case '-': push(val1-val2); break;
                case '*': push(val1*val2); break;
                case '/': push(val1/val2); break;   // float division now
                case '^': push(pow(val1,val2)); break;
            }
            i++;
        }
    }
    return pop();
}

int main() {
    char expr[] = "5 2 /";   // fraction example
    printf("Result: %.2f\n", evaluatePostfix(expr));
    return 0;
}
